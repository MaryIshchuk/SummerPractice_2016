@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<body>
    <form method="post" action="@Url.Action("FilmSelection","Selection")">
        <p><b>Выберите жанр</b></p>
        <p><input type="radio" name="genre" value="Боевик" title="Боевик"><img src="~/images/boevik.png" width="150" height="150" alt="Боевик" /></p>
        <p><input type="radio" name="genre" value="Военный" title="Военный"><img src="~/images/war.png" width="150" height="150" alt="Военный" /></p>
        <p><input type="radio" name="genre" value="Детектив" title="Детектив"><img src="~/images/detective.png" width="150" height="150" alt="Детектив" /></p>
        <p><input type="radio" name="genre" value="Документальный" title="Документальный"><img src="~/images/documentary.png" width="150" height="150" alt="Документальный" /></p>
        <p><input type="radio" name="genre" value="Драма" title="Драма"><img src="~/images/drama.png" width="150" height="150" alt="Драма" /></p>
        <p><input type="radio" name="genre" value="Мелодрама" title="Мелодрама"><img src="~/images/melodrama.png" width="150" height="150" alt="Мелодрама" /></p>
        <p><input type="radio" name="genre" value="Мультфильм" title="Мультфильм"><img src="~/images/cartoon.png" width="150" height="150" alt="Мультфильм" /></p>
        <p><input type="radio" name="genre" value="Мюзикл" title="Мюзикл"><img src="~/images/musical.png" width="150" height="150" alt="Мюзикл" /></p>
        <p><input type="radio" name="genre" value="Комедия" title="Комедия"><img src="~/images/comedy.png" width="150" height="150" alt="Комедия" /></p>
        <p><input type="radio" name="genre" value="Фантастика" title="Фантастика"><img src="~/images/fantasy.png" width="150" height="150" alt="Фантастика" /></p>
        <p><input type="radio" name="genre" value="Ужасы" title="Ужасы"><img src="~/images/horror.png" width="150" height="150" alt="Ужасы" /></p>
        <p><input type="radio" name="genre" value="Триллер" title="Триллер"><img src="~/images/thriller.png" width="150" height="150" alt="Триллер" /></p>

        <p><b>Выберите десятилетие</b></p>
        <p><input type="radio" name="decennary" value="1" title="1920"><img src="~/images/1920.png" width="150" height="150" alt="1920"/></p>
        <p><input type="radio" name="decennary" value="2" title="1930"><img src="~/images/1930.png" width="150" height="150" alt="1930"/></p>
        <p><input type="radio" name="decennary" value="3" title="1940"><img src="~/images/1940.png" width="150" height="150" alt="1940"/></p>
        <p><input type="radio" name="decennary" value="4" title="1950"><img src="~/images/1950.png" width="150" height="150" alt="1950"/></p>
        <p><input type="radio" name="decennary" value="5" title="1960"><img src="~/images/1960.png" width="150" height="150" alt="1960"/></p>
        <p><input type="radio" name="decennary" value="6" title="1970"><img src="~/images/1970.png" width="150" height="150" alt="1970"/></p>
        <p><input type="radio" name="decennary" value="7" title="1980"><img src="~/images/1980.png" width="150" height="150" alt="1980"/></p>
        <p><input type="radio" name="decennary" value="8" title="1990"><img src="~/images/1990.png" width="150" height="150" alt="1990"/></p>
        <p><input type="radio" name="decennary" value="9" title="2000"><img src="~/images/2000.png" width="150" height="150" alt="2000"/></p>
        <p><input type="radio" name="decennary" value="10" title="2010"><img src="~/images/2010.png" width="150" height="150" alt="2010"/></p>

        <p><b>Выберите рейтинг</b></p>
        <div class="form-group">
            <input type="number" class="form-control" name="min_rating" placeholder="минимальный рейтинг">
        </div>
        <input type="submit" class="btn btn-block btn-info btn-lg"></input>
    </form>

</body>
</html>